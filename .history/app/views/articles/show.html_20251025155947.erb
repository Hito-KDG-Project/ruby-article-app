<div class="container">
  <p style="color: green"><%= notice %></p>
  <p class="text-2xl font-bold mb-4"><%= @article.title %></p>
  <div class="prose mb-4"><%= simple_format(h(@article.body)) %></div>
  <hr class="my-4">
  <h3 class="text-xl font-semibold mb-2">
    コメント（<%= @article.comments.count %>）
  </h3>
  <ul class="mb-4">
    <%= render @article.comments %>
  </ul>
  <h4 class="text-lg font-semibold mb-2">新規コメント</h4>
  <%= render "comments/form_comment", article: @article %>
  <%= link_to "一覧へ戻る", articles_path, class: "btn btn-secondary mt-4" %>
  <div>
    <%= link_to "Edit this article", edit_article_path(@article) %> |
    <%= button_to "Destroy this article", @article, method: :delete %>
  </div>
</div>