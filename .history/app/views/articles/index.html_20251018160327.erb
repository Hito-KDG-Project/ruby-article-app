<div class="container mt-4">
  <p style="color: green"><%= notice %></p>
  <% content_for :title, "Articles" %>
  <h1>Articles</h1>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>本文</th>
        <th>要約</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= truncate(article.body, length: 50) %></td>
          <td><%= truncate(article.summary, length: 50) %></td>
          <td>
            <!-- 表示ボタン -->
            <%= link_to article, class: "btn btn-sm btn-secondary" do %>
              <i class="bi bi-eye"></i> 表示
            <% end %>
            <!-- 編集ボタン -->
            <%= link_to edit_article_path(article), class: "btn btn-sm btn-primary" do %>
              <i class="bi bi-pencil"></i> 編集
            <% end %>
            <!-- 削除ボタン -->
            <%= link_to article,
              data: { turbo_method: :delete, turbo_confirm: "削除してよろしいですか?" },
              class: "btn btn-sm btn-danger" do%>
              <i class="bi bi-trash"></i> 削除
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New article", new_article_path, class: "btn btn-success mt-3" %>
</div>
