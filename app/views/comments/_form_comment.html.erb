<%= form_with(model: [article, (@comment || Comment.new)], local: true) do |f| %>
  <% if f.object.errors.any? %>
    <div class="alert alert-danger mb-3">
      <ul class="mb-0">
        <% f.object.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= f.label :commenter, "お名前" %>
    <%= f.text_field :commenter, class: "form-control" %>
  </div>
  <div class="mb-2">
    <%= f.label :body, "コメント" %>
    <%= f.text_area :body, rows: 4, class: "form-control" %>
  </div>
  <%= f.submit "コメントする", class: "btn btn-primary" %>
<% end %>
